@model IEnumerable<EduHubLiving.Models.RecipeDto>

<h2>List of Recipes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Recipe Name</th>
            <th>Recipe Type</th>
            <th>Recipe Description</th>
            <th>Recipe Instructions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
        {
            <tr>
                <td>@recipe.RecipeName</td>
                <td>@recipe.RecipeType</td>
                <td>@recipe.RecipeDescription</td>
                <td>@recipe.RecipeInstructions</td>
                <td>

                    <form method="get" action="@Url.Action("Edit", "Recipe", new { id = recipe.RecipeID })">
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>

                    <form method="post" action="@Url.Action("DeleteConfirm", "Recipe", new { id = recipe.RecipeID })">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="post" action="@Url.Action("New", "Recipe")">
    <button type="submit" class="btn btn-success">Add New Recipe</button>
</form>



